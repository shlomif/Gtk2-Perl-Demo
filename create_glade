#!/usr/bin/perl
use strict;
use warnings;

use App::Gtk2Demo;

open my $glade, '<', 'glade/demo.glade' or die $!;
local $/ = undef;
my $xml = <$glade>;
mkdir 'lib/App/Gtk2Demo';
open my $out, '>', 'lib/App/Gtk2Demo/Glade.pm' or die $!;
print $out <<"END_GLADE";
package App::Gtk2Demo::Glade;
use strict;
use warnings;

our \$VERSION = '$App::Gtk2Demo::VERSION';

# this is an autogenerated file

sub get_xml {
    return <<"END_XML";
$xml
END_XML

}
1;
END_GLADE



